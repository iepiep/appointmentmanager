{% extends 'page.tpl' %}  <!-- Use your base template -->

{% block content %}
<div class="container">
    <h3>{{ 'Appointment Form'|trans({}, 'Modules.Appointmentmanager.Front') }}</h3>  <!-- Use translations -->

    {% if errors is defined and errors|length > 0 %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {% if success is defined %}
        <div class="alert alert-success">{{ success }}</div>
    {% endif %}

    <form method="post" action="">
        <div class="form-group">
            <label for="lastname">{{ 'Last Name'|trans({}, 'Modules.Appointmentmanager.Front') }}</label>
            <input type="text" class="form-control" name="lastname" id="lastname">
        </div>
         <div class="form-group">
                <label for="rdv_option_1">{{ 'Time Slot 1'|trans({}, 'Modules.Appointmentmanager.Front') }}</label>
                <select class="form-control" name="rdv_option_1" id="rdv_option_1">
                    {% for date in dates %}
                        <option value="{{ date }}">{{ date|date('l d/m/Y H:i') }}</option>  <!--  Display formatted date/time -->
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="rdv_option_2">{{ 'Time Slot 2'|trans({}, 'Modules.Appointmentmanager.Front') }}</label>
                <select class="form-control" name="rdv_option_2" id="rdv_option_2">
                    {% for date in dates %}
                        <option value="{{ date }}">{{ date|date('l d/m/Y H:i') }}</option> <!--  Display formatted date/time -->
                    {% endfor %}
                </select>
            </div>

        <div class="form-group">
            <input type="checkbox" name="GDPR" id="GDPR">
            <label for="GDPR">{{ 'I accept the data processing terms'|trans({}, 'Modules.Appointmentmanager.Front') }} <a href="#">({{ 'Read More'|trans({}, 'Modules.Appointmentmanager.Front') }})</a></label>
        </div>

        <button type="submit" name="submitAppointmentForm" class="btn btn-primary">{{ 'Submit'|trans({}, 'Modules.Appointmentmanager.Front') }}</button>
    </form>
</div>
{% endblock %}