{% extends '@PrestaShop/layout.tpl' %}
{% block content %}
<div class="container">
    <h3>Appointment Form</h3>
    {% if errors is defined %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    {% if success is defined %}
        <div class="alert alert-success">{{ success }}</div>
    {% endif %}
    <form method="post" action="">
        <div class="form-group">
            <label for="lastname">Nom</label>
            <input type="text" class="form-control" name="lastname" id="lastname" required>
        </div>
        <div class="form-group">
            <label for="firstname">Prénom</label>
            <input type="text" class="form-control" name="firstname" id="firstname" required>
        </div>
        <div class="form-group">
            <label for="address">Adresse</label>
            <input type="text" class="form-control" name="address" id="address" required>
        </div>
        <div class="form-group">
            <label for="postal_code">Code Postal</label>
            <input type="text" class="form-control" name="postal_code" id="postal_code" required>
        </div>
        <div class="form-group">
            <label for="city">Ville</label>
            <input type="text" class="form-control" name="city" id="city" required>
        </div>
        <div class="form-group">
            <label for="phone">Téléphone</label>
            <input type="text" class="form-control" name="phone" id="phone">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email">
        </div>
        <div class="form-group">
            <label for="rdv_option_1">Créneau 1</label>
            <select class="form-control" name="rdv_option_1" id="rdv_option_1" required>
                {% for date in dates %}
                    {% if 'APRES-MIDI' not in date %}
                        <option value="{{ date }}">{{ date }} MATIN</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="rdv_option_2">Créneau 2</label>
            <select class="form-control" name="rdv_option_2" id="rdv_option_2" required>
                {% for date in dates %}
                    {% if 'APRES-MIDI' in date %}
                        <option value="{{ date }}">{{ date }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <input type="checkbox" name="GDPR" id="GDPR" required>
            <label for="GDPR">J'accepte le <a href="#">traitement des données</a></label>
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
</div>
{% endblock %}